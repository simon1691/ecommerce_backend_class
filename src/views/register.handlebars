<div class="container-fluid main p-0 m-0">
  <div class="h-100 d-flex align-items-center">
    <div class="w-50 px-3 bg-primary h-100 d-flex flex-column justify-content-center align-items-center me-5">
      <h1 class="my-0 text-white">Don't you have an account?</h1>
      <h3 class="my-0 text-white">no worries, let's create one!</h6>
    </div>
    <div class="w-50 ps-3 pe-5 me-5">
      <form id="register">
        <div class="mb-4">
            <div class="d-flex flex-column w-75 mx-auto mb-4">
                <label for="firstName">
                    First Name
                </label>
                <input class="w-100 border border-1 rounded border-dark-subtle px-2 py-1" id="firstName" type="text" name="first_name" />
            </div>
            <div class="d-flex flex-column w-75 mx-auto mb-4">
                <label for="lastName">
                    Last Name
                </label>
                <input class="w-100 border border-1 rounded border-dark-subtle px-2 py-1" type="text" id="lastName" name="last_name" />
            </div>

             <div class="d-flex flex-column w-75 mx-auto">
                <label for="age">
                    Age
                </label>
                <input class="w-100 border border-1 rounded border-dark-subtle px-2 py-1" id="age" type="age" name="age" />
            </div>
            
        </div>
        <div class="mb-5">
            <div class="d-flex flex-column w-75 mx-auto mb-4">
                <label for="email">
                    Email
                </label>
                <input class="w-100 border border-1 rounded border-dark-subtle px-2 py-1" id="email" type="email" name="email" />
            </div>
            <div class="d-flex flex-column w-75 mx-auto">
                <label for="password">
                    Password
                </label>
                <input class="w-100 border border-1 rounded border-dark-subtle px-2 py-1" type="password" id="password" name="pasword" />
            </div>
        </div>
         <div class="mb-3">
            <div class="d-flex flex-column w-75 x-auto justify-content-end  mx-auto">
                <input class="btn btn-primary py-1" type="submit" value="Sign Up!" />
            </div>
        </div>
      </form>
      <p class="text-center">If you already have an account: <a href="/login">click here!</a></p>
    </div>
  </div>
</div>

