{{> nav}}
<div class="container">
    {{#if areProducts}}
        <h1 class="text-center mb-5">Listado de productos existentes</h1>
        <div class="row g-5 flex-wrap">
            {{#each productsList}}
            <div class="col-md-4 col-xl-3">
                <div class="card" style="height: 400px;">
                    <img height="150" src="#" class="card-img-top w-100 bg-secondary-subtle" alt="">
                    <div class="card-body">
                        <p class="badge text-bg-primary fw-light mt-0 mb-2 bg-info-subtle text-black">{{this.category}}</p>
                        <h5 class="card-title">{{this.title}}</h5>
                        <p class="card-text">{{this.description}}</p>
                        <p class="card-text fw-bold">Price: ${{this.price}}</p>
                        <button id={{this._id}} type="button" class="btn btn-primary btn-sm w-100" onclick="getId(event)">Add To cart</button>
                    </div>
                </div>
            </div>
        {{/each}}
        </div>
        
        {{else}}
        <h1>No Hay productos aun para mostrar</h1>
    {{/if}}
</div>

<script src="/js/index.js"></script>


